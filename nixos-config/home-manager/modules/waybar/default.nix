{
  programs.waybar = {
    enable = true;
    style = ./style.css;
    settings = {
      mainBar = {
        layer = "top";
        position = "top";
        height = 10;
        margin = "5";
        spacing = 10;
        modules-left = [ "hyprland/workspaces" "disk" "memory" "cpu" "temperature" "battery" "custom/internet" ];
        modules-center = [ "hyprland/window" ];
        modules-right = [ "tray" "idle_inhibitor" "custom/keyboard-layout" "backlight" "pulseaudio" "clock" ];

        "hyprland/workspaces" = {
          disable-scroll = true;
          show-special = true;
          special-visible-only = true;
          all-outputs = false;
          format = "{icon}";
          format-icons = {
            "1" = "Ôâ®";
            "2" = "ÔÑ†";
            "3" = "Ôââ";
            "4" = "Ôôî";
            "5" = "ÔãÜ";
            "6" = "ÔÜù";
            "7" = "ÔÑõ";
            "8" = "ÔÄ•";
            "9" = "";
            "magic" = "Óãä";
          };
          persistent-workspaces = {
            "*" = 8;
          };
        };

        "hyprland/window" = {
          icon = true;
          "icon-size" = 22;
          rewrite = {
            "(.*) ‚Äî Mozilla Firefox" = "$1 - ";
            "(.*) - Visual Studio Code" = "$1 -  ";
            "(.*) - Discord" = "$1 -  ";
            "^$" = "";
          };
        };

        "custom/keyboard-layout" = {
          format = "{}";
          interval = 1; # —Ä–∞–∑ –≤ —Å–µ–∫—É–Ω–¥—É –æ–±–Ω–æ–≤–ª—è—Ç—å
          exec = ''
              layout=$(hyprctl devices -j | jq -r '.keyboards[] | select(.main == true) | .active_keymap')
            case "$layout" in
              *"Russian"*) echo "üá∑üá∫" ;;
              *"English"*) echo "üá∫üá∏" ;;
              *) echo "$layout" ;;
              esac
          '';
        };

        # "custom/weather" = {
        #   format = " {} ";
        #   exec = "curl -s 'wttr.in/Krasnodar?format=%c%t&m'";
        #   interval = 300;
        #   class = "weather";
        # };

        "idle_inhibitor" = {
          format = "{icon}";
          format-icons = {
            activated = "ÔÉ¥";
            deactivated = "ÔÄ£";
          };
        };

        "backlight" = {
          interval = 2;
          format = " {percent}%";
          "on-click" = "brightnessctl set 10%+";
          "on-click-right" = "brightnessctl set 10%-";
        };

        "pulseaudio" = {
          format = "{icon} {volume}%";
          format-bluetooth = "{icon} {volume}% Ôäî";
          format-muted = "Ôë¶";
          on-click = "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+";
          on-click-right = "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-";
          on-click-middle = "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle";
          format-icons = {
            headphones = "ÔÄ•";
            handsfree = "Ôñê";
            headset = "Ôñê";
            phone = "ÔÇï";
            portable = "ÔÇï";
            car = "ÔÜπ";
            default = [ "ÔÄ¶" "ÔÄß" "ÔÄß" "ÔÄ®" "ÔÄ®" ];
          };
        };

        "custom/internet" = {
          exec = ./check_internet.sh;
          interval = 5;
          return-type = "json";
        };

        "battery" = {
          states = {
            warning = 30;
            critical = 15;
          };
          on-update = ''
            if [[ "$status" == "Discharging" && $capacity -le 20 ]]; then
              if [ ! -f /tmp/low_battery_notified ]; then
                notify-send -u critical "Low Battery" "Battery level is at ''${capacity}%!"
                  touch /tmp/low_battery_notified
                  fi
                  elif [[ "$status" == "Charging" || $capacity -gt 20 ]]; then
                  rm -f /tmp/low_battery_notified
                  fi
          '';
          interval = 10;
          format = "{icon} {capacity}%";
          format-charging = "Ôá¶ {capacity}%";
          format-alt = "{time} {icon}";
          format-icons = [ "ÔâÑ" "ÔâÉ" "ÔâÇ" "ÔâÅ" "ÔâÄ" ];
          tooltip = true;
          "tooltip-format" = "{timeTo}";
        };

        "disk" = {
          interval = 30;
          format = "ÔáÄ {percentage_used}%";
          "tooltip-format" = "{used} used out of {total} on \"{path}\" ({percentage_used}%)";
          "warning" = 80;
          "critical" = 95;
        };

        "memory" = {
          interval = 10;
          format = "Óâ¶ {used}";
          "tooltip-format" = "{used}GiB used of {total}GiB ({percentage}%)";
          "warning" = 70;
          "critical" = 90;
        };

        "cpu" = {
          interval = 10;
          format = "Ôíº {usage}%";
          "warning" = 70;
          "critical" = 90;
        };

        "temperature" = {
          interval = 10;
          "warning-temperature" = 60;
          "critical-temperature" = 80;
        };

        "clock" = {
          interval = 1;
          format = "{:%a %d:%b %H:%M}";
        };

        "tray" = {
          icon-size = 14;
          spacing = 0;
        };
      };
    };
  };
}
